<body>
<div class="container">
  <h1>⏰ Multi Alarm Clock</h1>
  <div class="clock" id="clock">--:--:--</div>
  <input type="time" id="timeInput">
  <div class="days">
    <label><input type="checkbox" value="1">Mon</label>
    <label><input type="checkbox" value="2">Tue</label>
    <label><input type="checkbox" value="3">Wed</label>
    <label><input type="checkbox" value="4">Thu</label>
    <label><input type="checkbox" value="5">Fri</label>
    <label><input type="checkbox" value="6">Sat</label>
  </div>
  <input type="text" id="labelInput" placeholder="Alarm label">
  <button id="addAlarm">Add Alarm</button>
  <div class="alarm-list" id="alarmList"></div>
  <audio id="alarmSound" src="https://actions.google.com/sounds/v1/alarms/alarm_clock.ogg"></audio>
</div>

<div id="modal" style="display:none" class="modal" role="dialog" aria-modal="true">
  <div class="modal-card">
    <div id="modalLabel" class="blink">Alarm</div>
    <div class="modal-buttons">
      <button id="stopBtn" class="stop-btn">Stop</button>
      <button id="dismissBtn">Dismiss</button>
    </div>
  </div>
</div>

<script>
let alarms=[]
let active=false
let activeLabel=''
function render(){
  const list=document.getElementById('alarmList')
  list.innerHTML=''
  alarms.forEach((a,i)=>{
    const div=document.createElement('div')
    div.className='alarm-item'
    let days=a.days.length>0?('('+a.days.join(',')+')'):'(Daily)'
    div.innerHTML=`${a.time} ${days} - ${a.label||'Alarm'} <button onclick="removeAlarm(${i})">❌</button>`
    list.appendChild(div)
  })
}
function addAlarm(){
  const time=document.getElementById('timeInput').value
  const label=document.getElementById('labelInput').value
  const dayInputs=document.querySelectorAll('.days input:checked')
  const days=[...dayInputs].map(d=>d.value)
  if(!time)return alert('Please select time')
  alarms.push({time,label,days})
  render()
}
function removeAlarm(i){alarms.splice(i,1);render()}
function showModal(label){
  active=true
  activeLabel=label||'Alarm'
  const m=document.getElementById('modal')
  const lbl=document.getElementById('modalLabel')
  lbl.textContent=activeLabel
  lbl.classList.add('blinking')
  m.style.display='flex'
}
function hideModal(){
  active=false
  const m=document.getElementById('modal')
  const lbl=document.getElementById('modalLabel')
  lbl.classList.remove('blinking')
  m.style.display='none'
  stopSound()
}
function stopSound(){
  const audio=document.getElementById('alarmSound')
  audio.pause()
  audio.currentTime=0
  audio.loop=false
}
function stopAll(){
  stopSound()
  hideModal()
}
function checkAlarms(){
  let now=new Date()
  let current=now.getHours().toString().padStart(2,'0')+":"+now.getMinutes().toString().padStart(2,'0')
  let today=now.getDay()
  alarms.forEach(a=>{
    if(a.time===current && (a.days.length===0 || a.days.includes(today.toString()))){
      if(!active){
        const audio=document.getElementById('alarmSound')
        audio.currentTime=0
        audio.loop=true
        audio.play()
        showModal(a.label||'Alarm')
      }
    }
  })
}
setInterval(checkAlarms,60000)
setInterval(()=>{const now=new Date();document.getElementById('clock').textContent=now.toLocaleTimeString()},1000)
document.getElementById('addAlarm').onclick=addAlarm
document.getElementById('stopBtn').onclick=stopAll
document.getElementById('dismissBtn').onclick=stopAll
</script>
</body>
